# Application
NODE_ENV=development
PORT=3000
APP_NAME=Maya Send
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/maya_send?schema=public

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# Admin Authentication
JWT_ADMIN_SECRET=your-super-secret-admin-jwt-key-min-32-chars
JWT_ADMIN_EXPIRES_IN=8h
ADMIN_SESSION_TIMEOUT=8h

# Admin Security
ADMIN_2FA_REQUIRED=true
ADMIN_IP_WHITELIST_ENABLED=false
ADMIN_MAX_LOGIN_ATTEMPTS=3
ADMIN_LOCKOUT_DURATION=30m

# Solana
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WSS_URL=wss://api.devnet.solana.com
USDC_MINT_ADDRESS=EPjFWdd5AufqSSqeM2qN1xzybapC8G4wEGGkZwyTDt1v
PLATFORM_WALLET_PRIVATE_KEY=your-platform-wallet-private-key
PLATFORM_WALLET_PUBLIC_KEY=your-platform-wallet-public-key

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@maya-send.com
ADMIN_ALERT_EMAIL=admin-alerts@maya-send.com
SEND_DAILY_REPORTS=true
SEND_FRAUD_ALERTS=true

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Transaction Fees
PLATFORM_FEE_PERCENTAGE=0.5
MIN_TRANSACTION_AMOUNT=0.01
MAX_TRANSACTION_AMOUNT=100000
ESCROW_FEE_PERCENTAGE=1.0

# Email Payment
EMAIL_PAYMENT_EXPIRY_DAYS=7
MAX_EMAIL_PAYMENT_AMOUNT=10000

# Withdrawal
WITHDRAWAL_MIN_AMOUNT=10
WITHDRAWAL_MAX_AMOUNT=100000
WITHDRAWAL_FEE=1
WITHDRAWAL_AUTO_APPROVE_LIMIT=1000

# KYC
KYC_AUTO_APPROVE=false
KYC_DOCUMENT_STORAGE=s3
KYC_MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
STRICT_RATE_LIMIT_MAX=5

# Security
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_SPECIAL=true

# Fraud Detection
FRAUD_DETECTION_ENABLED=true
AUTO_FLAG_HIGH_RISK=true
RISK_SCORE_THRESHOLD=70
MAX_TRANSACTION_VELOCITY=10
VELOCITY_TIME_WINDOW=3600000

# Report Storage
REPORT_STORAGE_PATH=./reports
REPORT_RETENTION_DAYS=90

# System Health Monitoring
HEALTH_CHECK_INTERVAL=60000
ALERT_ON_HIGH_CPU=80
ALERT_ON_HIGH_MEMORY=85
ALERT_ON_LOW_DISK=20

# Audit Log Retention
AUDIT_LOG_RETENTION_DAYS=365

# Compliance
REQUIRE_MANUAL_REVIEW_AMOUNT=10000
AUTO_SUSPEND_HIGH_RISK=true
MAX_FAILED_LOGIN_ATTEMPTS=5

# Session
SESSION_SECRET=your-session-secret-key-min-32-chars
SESSION_EXPIRY=86400000

# AWS S3 (Optional - for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=maya-send-uploads

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.
